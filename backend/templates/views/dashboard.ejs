<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Dashboard | BookNook</title>
  <!-- Bootstrap CSS -->
  <%- include('../partials/header')%>
</head>

<body class="bg-light">

  <!-- Navbar -->
   <%- include('../partials/loggedIn/navbar')%>

  <!-- Main Section -->
  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>Welcome, <%= user.firstname %> ðŸ‘‹</h2>
      <p class="text-muted">Manage your books or explore what others are selling.</p>
    </div>

    <!-- Add Book Shortcut -->
    <div class="d-flex justify-content-center mb-4">
      <a href="/books/addBook" class="btn btn-primary btn-lg">
        + Add New Book
      </a>
    </div>

    <!-- Books Section (Placeholder for now) -->
  <div class="container mt-4">
    <div class="row">
      <% book.forEach(book => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <img src="<%= book.image %>" class="card-img-top" alt="<%= book.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text text-muted">
                <%= book.description.substring(0, 80) %>...
              </p>
              <a href="/books/<%= book._id %>" class="btn btn-outline-primary btn-sm">
                View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


      <!-- Duplicate this card later dynamically using EJS loop -->
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer')%>

    <!-- Bootstrap JS -->
</body>

</html>