<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Books | BookNook</title>
  <%- include('../../partials/header')%>
</head>
<body class="bg-light">

  <!-- Navbar -->
    <%- include('../../partials/loggedIn/navbar')%>

  <!-- Page Heading -->
  <div class="container mt-5">
    <div class="text-center mb-4">
      <h2 class="fw-bold">My Listed Books</h2>
      <p class="text-muted">Here are all the books you’ve added for sale.</p>
    </div>

    <!-- Books Grid -->
    <div class="row">
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
              <img src="<%= book.image %>" class="card-img-top" alt="<%= book.title %>" style="height: 230px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text text-muted small mb-1"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text text-muted small"><strong>Condition:</strong> <%= book.condition %></p>
                <p class="text-success fw-semibold mt-2">₹ <%= book.price %></p>
                <p class="card-text text-truncate"><%= book.description %></p>
                <div class="mt-auto d-flex justify-content-between">
                  <a href="/books/<%= book._id %>" class="btn btn-outline-primary btn-sm">View</a>
                  <a href="/books/edit/<%= book._id %>" class="btn btn-outline-warning btn-sm">Edit</a>
                  <form action="/books/delete/<%= book._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this book?')">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center mt-5">
          <h5 class="text-muted">You haven’t added any books yet.</h5>
          <a href="/books/add" class="btn btn-primary mt-3">+ Add Your First Book</a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../../partials/footer')%>

</body>
</html>
