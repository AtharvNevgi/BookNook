<%- include('../../partials/navbar')%>
    <div class="container mt-5" style="max-width: 400px; background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
    <h3 class="text-center mb-4">Login</h3>
        <form action="/user/userlogin" method="POST">
