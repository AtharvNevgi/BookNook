<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Profile | BookNook</title>
  <%- include('../../partials/header')%>
  <style>
        .container{
            height: 100vh;
        }
    </style>
</head>
<body class="bg-light">
  
  <!-- Navbar -->
  <%- include('../../partials/loggedIn/navbar')%>


  <!-- Profile Section -->
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <!-- Profile Card -->
        <div class="card shadow-sm p-4">
          <a href="/user/dashboard">
           <i class="bi bi-arrow-left"></i>
         </a>
          <div class="d-flex align-items-center mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Profile"
              class="rounded-circle me-3" width="100" height="100">
            <div>
              <h4 class="mb-0"><%- user.firstname %> <%- user.lastname %></h4>
              <p class="text-muted mb-1"><%- user.email %></p>
            </div>
          </div>

          <!-- Basic Info -->
          <h5 class="fw-bold border-bottom pb-2">Basic Information</h5>
          <div class="row mt-3">
            <div class="col-md-6">
              <p><strong>Gender:</strong> <%- user.gender %></p>
              <p><strong>Phone:</strong> <%- user.phone %></p>
            </div>
            <div class="col-md-6">
              <p><strong>Age:</strong> <%- user.age %></p>
              <p><strong>Email:</strong> <%- user.email %></p>
            </div>
          </div>

          <!-- Stats -->
          <h5 class="fw-bold border-bottom pb-2 mt-4">Your Activity</h5>
          <div class="row text-center mt-3">
            <div class="col-md-6 mb-3">
              <div class="border rounded py-3 bg-light">

                <p class="text-muted mb-0">Books Listed</p>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="border rounded py-3 bg-light">

                <p class="text-muted mb-0">Books Sold</p>
              </div>
            </div>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-end mt-4">
            <a href="/books/addBook" class="btn btn-primary me-2">+ Add New Book</a>
            <a href="/user/profile/edit" class="btn btn-outline-secondary">Edit Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../../partials/footer')%>
</body>
</html>
